    <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    rel="stylesheet"
    />
    <script
    src="https://kit.fontawesome.com/74839f3c8a.js"
    crossorigin="anonymous"
    ></script>
    
