    <link href="/css/styles.css" rel="stylesheet">
   
  </head>
  <body>

    <header>
    
      <%- include( '../partials/header') %>
      </header>

    <main class="main-login">
      <div class="registration-form">
        <h1>Registrarse</h1>
        <div id="logo-login">
          <i class="fa-regular fa-circle-user"></i>
        </div>

        
        <ul>
          <% errors.forEach(elemento=>{ %>

             <li> <%= elemento.msg%></li>

              <%});%>
      </ul>


        <form action="/signup" method="post" class="container-form">
          <label for="title">Nombre:</label>
          <input type="text" id="title" name="title" required />

          <label for="apellido">Apellido:</label>
          <input type="text" id="apellido" name="apellido" required />

          <label for="email">Correo electrónico:</label>
          <input type="email" id="email" name="email" required />

          <label for="password">Contraseña:</label>
          <input type="password" id="password" name="password" required />

          <label for="confirm-password">Confirmar contraseña:</label>
          <input
            type="password"
            id="confirm-password"
            name="confirm-password"
            required
          />

          <button type="submit" id="btn-firts-grade">
            Crear usuario de primer grado
          </button>
        </form>
      </div>
      <div >
        <!-- SEGUNDO FORMULARIO -->
        <form action="" method="" class="container-form">
          <p class="parrapher1">Para utilizar actividades del sitio web se requiere informacion adicional</del></p>
          <label for="fecha-nacimiento">Fecha de nacimiento:</label>
          <input type="date" id="fecha-nacimiento" name="fecha-nacimiento" required />

          <label for="telefono">Numero de telefono:</label>
          <input type="number" id="telefono" name="telefono" required />

          <label for="pais">País:</label>
          <select id="pais" name="pais">
            <option value="">Selecciona un pais</option>
            <option value="argentina">Argentina</option>
            <option value="brasil">Brasil</option>
            <option value="chile">Chile</option>
            <option value="colombia">Colombia</option>
            <option value="mexico">México</option>
            <option value="peru">Perú</option>
          </select>

          <label for="provincia">Provincia:</label>
          <select name="provincia" id="provincia">
            <option value="">Selecciona una provincia</option>
            <option value="buenosAires">Buenos Aires</option>
            <option value="brasilia">Brasilia</option>
            <option value="santiago">Santiago de Chile</option>
            <option value="bogota">Bogotá</option>
            <option value="ciudadMexico">Ciudad de México</option>
            <option value="lima">Lima</option>
          </select>

          <label for="address">Dirección:</label>
          <input
            type="text"
            id="address"
            name="address"
            required
          />

          <button type="submit" id="btn-second-grade">
            Crear usuario de segundo grado
          </button>
        </form>
      </div>
      
        <!-- tercer FORMULARIO -->
        
        <p class="parrapher1">Para utilizar actividades del sitio web se requiere informacion adicional</p>
        <div class="finance">
          <!-- agregar tarjeta -->
          <div class="">
            <form action="" class="container-form-finance" id="acounts">
                <label for="num-card">Tarjeta número:</label>
                <input type="number" id="num-card" name="num-card" required />
                
                <label for="titular">Titular:</label>
                <input type="text" id="titular" name="titular" required />
                
                <label for="vencimiento">Vencimiento:</label>
                <input type="date" id="vencimiento" name="vencimiento" required />

                <button type="submit" id="btn-add-card">
                Agregar Tarjeta
                </button>
              </form>
            </div>
            <!-- agregar cuenta -->
            <div>
              <form  action="" class="container-form-finance2" id="acounts">
                
                <label for="acount">Cuenta:</label>
                <input type="number" id="acount" name="acount" required />
              
                <label for="titular">Titular:</label>
                <input type="text" id="titular" name="titular" required />
              
                <label for="vencimiento">Vencimiento:</label>
                <input type="date" id="vencimiento" name="vencimiento" required />
                <button type="submit" id="btn-add-acount">
                Agregar Cuenta
                </button>
              </form>
              <button type="submit" id="btn-third-grade" form="acounts">
                Crear usuario de tercer grado
              </button>
            </div>
          </div>
          
        </form>
      
    </main>

    <footer>
<%- include( '../partials/footer') %>
</footer>

  </body>

</html>